<%= form_with(model: Tweet, local: true) do |f| %>
<div class="form-group">
  <%= f.label :twittear, "New Tweet"%>
  <%= f.text_area :twittear, id: "txtarea", :onkeyup => 'countChars()', class: "form-control form-control-lg textarea-autosize text-black", :maxlength => 280  %>
</div>
<div class="d-flex justify-content-between">
  <%= f.button :Post, class: "btn btn-primary" %>
  <p id="charNum" class="pr-3"></p>
</div>
<% end %>
