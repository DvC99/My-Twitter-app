<%= form_with model: Mensaje, url:"/mensaje/send/#{@userChat.id}/", method: "post", local: true do |f| %>
    <div class="form-group">
        <%= f.label :mensaje, "Mensaje"%>
        <%= f.text_area :mensaje, id: "txtarea", :onkeyup => 'countChars()', class: "form-control form-control-lg textarea-autosize text-white", style:"background-color: #253341; border: #15202b;" ,:maxlength => 280  %>
    </div>
    <div class="d-flex justify-content-end">
        <%= f.button :Send, class: "btn btn-outline-primary my-1"%>
        <p id="charNum" class="pr-3"></p>
    </div>
<% end %>