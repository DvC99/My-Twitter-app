<div class="form-signin ">
<div class="d-flex justify-content-center">
    <%= image_tag("icons8-twitter-96.png", size:"80x80", :alt =>"", :loading =>"lazy", class:"d-block") %>
    <p class="h6 mb-3 font-weight-normal d-flex ">See what's happening in the world right now</p>
  </div>
  <h2 class="h1 mb-3 font-weight-normal text-center">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
    <%= f.label :email, class:"h6"%><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password , class:"h6"%><br />
    <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="d-flex justify-content-end">
    <%= f.submit "Log in", class:"btn btn-outline-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>