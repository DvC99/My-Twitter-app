<section class="container text-center sign-ip">
  <div class="form-signin ">
    <div class="d-flex justify-content-center">
      <%= image_tag("favicon.png", size:"80x80", :alt =>"", :loading =>"lazy", class:"d-block") %>
    </div>
    <h2 class="h1 mb-3 font-weight-normal text-center">Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group text-md-left">
        <%= f.label :email, class:"h6"%><br />
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group text-md-left">
        <%= f.label :password , class:"h6"%><br />
        <%= f.password_field :password,class:"form-control", autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field text-md-left">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="d-flex justify-content-end">
        <%= f.submit "Log in", class:"btn btn-outline-primary" %>
      </div>
    <% end %>

    <div class="text-md-left">
